<style>
  .container{
    margin: auto;
    max-width: 1200px;
  }
  nav .container {
    display: flex;
    align-items: center;
    padding: 1.5em 1em;
    gap: 1em;
  }
  #logo{
    font-weight: bold;
    font-size: 2em;
    text-transform: uppercase;
    text-decoration: none;
    color: black;
  }
  #links ul, #account-links ul{
    display: flex;
    gap: 1em;
    padding: 0;
    margin: 0;
    li{
      list-style-type: none;
      a{
        font-weight: lighter;
        text-decoration: none;
        color: black;
      }
    }
  }
  #account-links ul img{
    width: 1.25em;
  }
  #search{
    flex-grow: 1;
  }
  #search input {
    padding: 0.6em 0.9em;
    background-color: rgb(236, 236, 236);
    border: 0;
    border-radius: 1000em;
    width: 100%;
  }
  header{
    background-color: rgb(255, 248, 248);
  }
  header .container{
    display: flex;
    align-items: flex-end;
    gap: 1em;
    padding: 1em;
    img{
      width: 100%;
    }
  }
  #header-img img{
    max-width: 100%;
    max-height: 350px;
  }
  #header-left{
    padding: 1.5em;
  }
  #Header-title{
    h1{
      font-size: 2.5em;
      text-transform: uppercase;
      margin-bottom: 0.25em;
    }
    small{
      color: rgb(89, 89, 89);
    }
  }
  #header-title-btn{
    margin-top: 1em;
    display: inline-block;
    background-color: black;
    color: white;
    border-radius: 10000em;
    text-decoration: none;
    padding: 0.50em 2.5em;
  }
  #header-stats{
    margin-top: 2em;
    ul{
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      padding: 0;
      margin: 0;
    }
    li{
      list-style: none;
      padding: 1em;
    }
    li + li{
      border-left: 1.8px solid rgb(209, 208, 208);
    }
    strong{
      display: block;
      font-size: 2em;
      margin-bottom: 0.15em;
    }
    small{
      display: block;
      color: rgb(89, 89, 89);
    }
  }
  #brands .container{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1em;
    padding: 1.25em;
    background-color: black;
    img{
      max-width: 100%;
    }
  }
  #new-arrivals{
    padding: 1em;
    margin-bottom: 3em;
    h2{
      font-size: 2.5em;
      text-transform: uppercase;
      text-align: center;
    }
  }
  #new-arrivals-list{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1em;
  }

  #dress-style-list{
    display: grid;
    gap: 1em;
    grid-template-columns: repeat(7, 1fr);
  }
  .dress-style-list-items{
    border-radius: 0.75em;
    height: 230px;
    background-size: cover;
    background-position: right center;
    strong{
      display: inline-block;
      padding: 0.5em;
      font-size: 1.5em;
    }
  }

  #dress-style .container{
    padding: 1em 2em;
    background-color: rgba(226, 226, 226, 0.452);
    margin: 1em auto;
    border-radius: 1em;
    h2{
      font-size: 2.2em;
      text-transform: uppercase;
      text-align: center;
    }
  }
  #Casual-style-list{
    grid-column: span 3 / span 3;
    background-image: url("https://placehold.co/400x400");

  }
  #Formal-style-list{
    grid-column: span 4 / span 4;
    background-image: url("https://placehold.co/400x400");
  }
  #Party-style-list{
    grid-column: span 4 / span 4;
    background-image: url("https://placehold.co/400x400");
  }
  #Gyms-style-list{
    grid-column: span 3 / span 3;
    background-image: url("https://placehold.co/400x400");
  }
  #reviews{
    margin-top: 3em;
    padding: 0 1em;
    h2{
      text-transform: uppercase;
      font-size: 2em;
    }
  }
  #reviews-items{
    display: grid;
    gap: 1em;
    grid-template-columns: repeat(3, 1fr);
  }
  .reviews-item{
    border: 1px solid rgb(209, 208, 208);
    border-radius: 1em;
    padding: 1em;
    h3{
      margin: 0.5em 0;
    }
  }
  #newsletter{
    margin-left: 0.75em;
    margin-right: 0.75em;
  }
  #newsletter .container{
    margin-top: -3em;
    transform: translateY(50%);
    display: flex;
    padding-left: 0.75em;
    padding-right: 0.75em;
    gap: 2em;
    background-color: black;
    color: white;
    padding: 2em 3em;
    border-radius: 1.5em;
    p{
      margin: 0;
      flex-grow: 1;
      font-size: 2em;
      font-weight: bold;
      text-transform: uppercase;
    }
    form{
      display: flex;
      flex-direction: column;
      gap: 0.5em;
      input, button{
        padding: 0.5em 1em;
        border-radius: 9999px;
      }
    }
  }
  footer{
    padding-top: 7em;
    padding-left: 0.75em;
    padding-right: 0.75em;
    background-color: rgb(218, 218, 218);
  }
  #footer-top{
    display: flex;
    gap: 1em;
  }
  #footer-brands{
    strong{
      font-size: 2em;
    }
    p{
      color: rgb(97, 97, 97);
    }
  }
  #footer-links{
    flex-grow: 1em;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5em;
    font-size: 0.8em;
    white-space: nowrap;
    ul{
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      grid-area: 0.5em;
    }
    li{
      list-style: none;
      a{
        text-decoration: none;
        color: rgb(70, 70, 70);
      }
    }
  }
  #footer-bottom{
    border-top: 2px solid rgb(214, 214, 214);
    margin-top: 1em;
    display: flex;
    align-items: center;
    justify-content: space-between;
    p{
      color: gray;
      font-weight: lighter;
    }
    ul{
      margin: 0;
      padding: 0;
      display: flex;
      gap: 0.5em;
    }
    li{
      list-style: none;
    }
  }
  @media (max-width: 760px) {
    #links, #search{
      display: none;
    }
    #account-links{
      margin-left: auto;
  }
  header .container{
    flex-direction: column;
    align-items: center;
  }
  #new-arrivals-list{
    grid-template-columns: repeat(2, 1fr);
  }
  #dress-style-list{
    grid-template-columns: 1fr;
  }
  #Casual-style-list,
  #Formal-style-list,
  #Party-style-list,
  #Gyms-style-list {
    grid-column: span 1 / span 1;
  }
  #reviews-items{
    grid-template-columns: 1fr;
  }
  #newsletter .container{
    flex-direction: column;
    margin-top: -4em;
    margin-left: 0.75em;
    margin-right: 0.75em;
  }
  #newsletter .container p{
    font-size: 1.5em;
  }
  footer{
    padding-top: 10em;
  }
  #footer-top{
    flex-direction: column;
  }
  #footer-links{
    grid-template-columns: repeat(2, 1fr);
  }
  #footer-bottom{
    flex-direction: column;
  }
  #header-stats ul{
    grid-template-columns: repeat(2, 1fr);
    gap: 1em;
  }
  #header-stats ul li + li{
    border: 0;
  }
  #header-stats li:nth-child(3){
    grid-column: span 2 / span 2;
    text-align: center;
  }
  }
</style>
